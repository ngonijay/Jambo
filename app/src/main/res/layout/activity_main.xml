<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JUMBO THE ELEPHANT"
        android:gravity="center|bottom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

    <Button
        android:id="@+id/storyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Story"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="552dp" />

    <Button
        android:id="@+id/storyButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Second story"
        />

    <Button
        android:id="@+id/storyButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="third story" />
        </LinearLayout>
</LinearLayout>